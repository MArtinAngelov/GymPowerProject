@model IEnumerable<GymPower.Models.Order>
@{
    ViewData["Title"] = "Orders";
}

<h1 class="text-center mb-4 text-warning fw-bold">Orders</h1>

<table class="table table-hover shadow-sm align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Customer</th>
            <th>Email</th>
            <th>Date</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            var total = order.OrderItems?.Sum(i => i.Price * i.Quantity) ?? 0;
            <tr>
                <td>@order.Id</td>
                <td>@order.UserId</td>
                <td>@order.Email</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@total.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
