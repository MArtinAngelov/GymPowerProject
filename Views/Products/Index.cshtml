@model IEnumerable<GymPower.Models.Product>
@{
    ViewData["Title"] = "Premium Supplements - GymPower";
}

<!-- Hero Section -->
<div class="hero-section" style="padding: 80px 0; background: var(--gradient-dark);">
    <div class="container text-center">
        <h1 class="hero-title">PREMIUM FITNESS SUPPLEMENTS</h1>
        <p class="lead">Fuel your performance with scientifically formulated supplements for maximum results</p>
    </div>
</div>

<div class="container mt-5">
    <!-- Category Filter -->
    <div class="row mb-5">
        <div class="col-12">
            <h3 class="text-center mb-4">SHOP BY CATEGORY</h3>
            <div class="d-flex flex-wrap gap-2 justify-content-center">
                <a href="@Url.Action("Index", new { category = "" })"
                   class="btn @(string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["category"]) ? "btn-primary" : "btn-outline-light")">
                    <i class="fas fa-th-large me-2"></i> All Products
                </a>
                <a href="@Url.Action("Index", new { category = "Protein" })"
                   class="btn @(ViewContext.HttpContext.Request.Query["category"] == "Protein" ? "btn-primary" : "btn-outline-light")">
                    <i class="fas fa-weight me-2"></i> Protein
                </a>
                <a href="@Url.Action("Index", new { category = "Creatine" })"
                   class="btn @(ViewContext.HttpContext.Request.Query["category"] == "Creatine" ? "btn-primary" : "btn-outline-light")">
                    <i class="fas fa-bolt me-2"></i> Creatine
                </a>
                <a href="@Url.Action("Index", new { category = "Weight Loss" })"
                   class="btn @(ViewContext.HttpContext.Request.Query["category"] == "Weight Loss" ? "btn-primary" : "btn-outline-light")">
                    <i class="fas fa-fire me-2"></i> Weight Loss
                </a>
                <a href="@Url.Action("Index", new { category = "Amino Acids" })"
                   class="btn @(ViewContext.HttpContext.Request.Query["category"] == "Amino Acids" ? "btn-primary" : "btn-outline-light")">
                    <i class="fas fa-dna me-2"></i> Amino Acids
                </a>
                <a href="@Url.Action("Index", new { category = "Vitamins" })"
                   class="btn @(ViewContext.HttpContext.Request.Query["category"] == "Vitamins" ? "btn-primary" : "btn-outline-light")">
                    <i class="fas fa-capsules me-2"></i> Vitamins
                </a>
                <a href="@Url.Action("Index", new { category = "Pre-Workout" })"
                   class="btn @(ViewContext.HttpContext.Request.Query["category"] == "Pre-Workout" ? "btn-primary" : "btn-outline-light")">
                    <i class="fas fa-running me-2"></i> Pre-Workout
                </a>
            </div>
        </div>
    </div>

    <!-- Admin Create Button -->
    @if (Context.Session.GetString("Role") == "Admin")
    {
        <div class="row mb-4">
            <div class="col-12 text-end">
                <a asp-action="Create" class="btn btn-success btn-lg">
                    <i class="fas fa-plus-circle me-2"></i> Add New Product
                </a>
            </div>
        </div>
    }

    <!-- Products Grid -->
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                <div class="card product-card h-100">
                    <!-- Product Image -->
                    <div class="position-relative overflow-hidden">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name"
                             onerror="this.src='/images/products/default-product.jpg'"
                             style="height: 250px; object-fit: cover; transition: transform 0.3s ease;">

                        <!-- Premium Badge -->
                        <span class="badge-premium position-absolute top-0 start-0 m-3">
                            <i class="fas fa-crown me-1"></i> Premium
                        </span>

                        <!-- Stock Status -->
                        @if (product.StockQuantity < 10)
                        {
                            <span class="badge bg-warning position-absolute top-0 end-0 m-3">
                                <i class="fas fa-exclamation-triangle me-1"></i> Low Stock
                            </span>
                        }
                        else if (product.StockQuantity > 50)
                        {
                            <span class="badge bg-success position-absolute top-0 end-0 m-3">
                                <i class="fas fa-check me-1"></i> In Stock
                            </span>
                        }

                        <!-- Recommendation Badges -->
                        <div class="position-absolute bottom-0 start-0 m-2">
                            @if (product.IsRecommendedForMassGain)
                            {
                                <span class="badge bg-info me-1 mb-1" title="Recommended for Mass Gain">
                                    <i class="fas fa-weight-hanging"></i> Mass
                                </span>
                            }
                            @if (product.IsRecommendedForWeightLoss)
                            {
                                <span class="badge bg-success me-1 mb-1" title="Recommended for Weight Loss">
                                    <i class="fas fa-fire"></i> Cut
                                </span>
                            }
                            @if (product.IsRecommendedForMaintenance)
                            {
                                <span class="badge bg-primary mb-1" title="Recommended for Maintenance">
                                    <i class="fas fa-balance-scale"></i> Maintain
                                </span>
                            }
                        </div>
                    </div>

                    <!-- Product Details -->
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@product.Name</h5>
                        <span class="badge bg-dark mb-2 align-self-start">@product.Category</span>

                        <p class="card-text flex-grow-1">@product.Description</p>

                        <!-- Stock Info -->
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-box me-1"></i>
                                @if (product.StockQuantity > 0)
                                {
                                    <span class="text-success">@product.StockQuantity in stock</span>
                                }
                                else
                                {
                                    <span class="text-danger">Out of stock</span>
                                }
                            </small>
                        </div>

                        <!-- Price and Actions -->
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="text-primary fw-bold mb-0">$@product.Price.ToString("F2")</h4>
                                <div class="text-warning">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                    <small class="text-muted">4.5</small>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <!-- Details Button -->
                                <a asp-action="Details" asp-route-id="@product.Id"
                                   class="btn btn-info" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>

                                @if (Context.Session.GetString("Role") == "Admin")
                                {
                                    <!-- Admin Actions -->
                                    <a asp-action="Edit" asp-route-id="@product.Id"
                                       class="btn btn-warning flex-fill" title="Edit Product">
                                        <i class="fas fa-edit me-1"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@product.Id"
                                       class="btn btn-danger" title="Delete Product">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                }
                                else
                                {
                                    <!-- Customer Add to Cart -->
                                    @if (product.StockQuantity > 0)
                                    {
                                        <button class="btn btn-primary flex-fill add-to-cart-btn"
                                                data-product-id="@product.Id"
                                                data-product-name="@product.Name"
                                                data-product-price="@product.Price"
                                                data-product-image="@product.ImageUrl">
                                            <i class="fas fa-cart-plus me-2"></i> ADD TO CART
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary flex-fill" disabled>
                                            <i class="fas fa-times me-2"></i> OUT OF STOCK
                                        </button>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Empty State -->
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
            <h3>No products found</h3>
            <p class="text-muted">No products available in this category at the moment.</p>
            <a href="@Url.Action("Index", new { category = "" })" class="btn btn-primary">
                <i class="fas fa-th-large me-2"></i> Browse All Products
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add to cart functionality
            $('.add-to-cart-btn').click(function() {
                const productId = $(this).data('product-id');
                const productName = $(this).data('product-name');
                const productPrice = $(this).data('product-price');
                const productImage = $(this).data('product-image');

                const button = $(this);
                const originalText = button.html();

                // Show loading state
                button.html('<i class="fas fa-spinner fa-spin me-2"></i> ADDING...');
                button.prop('disabled', true);

                // AJAX call to add to cart
                $.ajax({
                    url: '@Url.Action("AddToCart", "Cart")',
                    type: 'POST',
                    data: {
                        productId: productId,
                        productName: productName,
                        price: productPrice,
                        imageUrl: productImage,
                        quantity: 1
                    },
                    success: function(response) {
                        updateCartCount();
                        showSuccessNotification(productName + ' added to cart!');

                        setTimeout(() => {
                            button.html(originalText);
                            button.prop('disabled', false);
                        }, 1000);
                    },
                    error: function() {
                        showErrorNotification('Failed to add product to cart');
                        button.html(originalText);
                        button.prop('disabled', false);
                    }
                });
            });

            // Update cart count
            function updateCartCount() {
                $.get('@Url.Action("GetCartCount", "Cart")', function(count) {
                    $('#cartCount').text(count);
                });
            }

            // Success notification
            function showSuccessNotification(message) {
                const notification = $(`
                    <div class="alert alert-success position-fixed top-0 start-50 translate-middle-x mt-3 pulse"
                         style="z-index: 9999; min-width: 300px;">
                        <i class="fas fa-check-circle me-2"></i> ${message}
                    </div>
                `);
                $('body').append(notification);
                setTimeout(() => notification.remove(), 3000);
            }

            // Error notification
            function showErrorNotification(message) {
                const notification = $(`
                    <div class="alert alert-danger position-fixed top-0 start-50 translate-middle-x mt-3"
                         style="z-index: 9999; min-width: 300px;">
                        <i class="fas fa-exclamation-triangle me-2"></i> ${message}
                    </div>
                `);
                $('body').append(notification);
                setTimeout(() => notification.remove(), 3000);
            }

            // Card hover effects
            $('.product-card').hover(
                function() {
                    $(this).addClass('shadow-lg border-primary');
                    $(this).find('.card-img-top').css('transform', 'scale(1.05)');
                },
                function() {
                    $(this).removeClass('shadow-lg border-primary');
                    $(this).find('.card-img-top').css('transform', 'scale(1)');
                }
            );
        });
    </script>
}