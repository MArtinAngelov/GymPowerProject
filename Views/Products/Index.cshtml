@using Microsoft.AspNetCore.Http
@model IEnumerable<GymPower.Models.Product>
@{
    ViewData["Title"] = "Премиум добавки - GymPower";
}
<!-- 🛒 Product Page Hero Slider -->
<div id="productsCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="2200">
    <div class="carousel-inner">

        <!-- Slide 1 -->
        <div class="carousel-item active" style="background-image: url('/images/hero/ManWithSuplements.png');">
            <div class="overlay"></div>
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="fw-bold display-5 mb-2">💪 Избери своята цел</h1>
                <p class="lead mb-3">Открий добавките, които ще те доближат до нея.</p>
                <a href="/Products?category=Изграждане на мускулна маса" class="btn btn-warning btn-sm px-4 fw-bold">ИЗГРАЖДАНЕ НА МУСКУЛНА МАСА</a>
            </div>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-item" style="background-image: url('/images/hero/FatBurner.png');">
            <div class="overlay"></div>
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="fw-bold display-5 mb-2">🔥 Изгори мазнините интелигентно</h1>
                <p class="lead mb-3">Fat Burners и L-Carnitine формули за по-добри резултати.</p>
                <a href="/Products?category=Отслабване" class="btn btn-warning btn-sm px-4 fw-bold">ОТСЛАБВАНЕ</a>
            </div>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-item" style="background-image: url('/images/hero/ThorPreWorkout.png');">
            <div class="overlay"></div>
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="fw-bold display-5 mb-2">⚡ Повиши издръжливостта си</h1>
                <p class="lead mb-3">Открий Energy и Pump формули за максимална производителност.</p>
                <a href="/Products?category=Висока производителност" class="btn btn-warning btn-sm px-4 fw-bold">ВИСОКА ПРОИЗВОДИТЕЛНОСТ</a>
            </div>
        </div>
    </div>
</div>

<!-- 🎨 Carousel Styles -->
<style>
    #productsCarousel {
        height: 50vh;
        position: relative;
        overflow: hidden;
    }

    .carousel-item {
        height: 50vh;
        background-size: cover;
        background-position: center;
        transition: opacity 0.8s ease-in-out, transform 3s ease;
    }

        .carousel-item.active {
            animation: zoomIn 4s ease-in-out infinite alternate;
        }

    @@keyframes zoomIn {
        from {
            transform: scale(1);
        }

        to {
            transform: scale(1.05);
        }
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.55);
        z-index: 1;
    }

    .carousel-caption {
        z-index: 10;
        text-align: center;
        color: #fff;
        text-shadow: 0 2px 12px rgba(0,0,0,0.9);
    }

        .carousel-caption h1 {
            font-size: 2rem;
            background: linear-gradient(90deg, #ff6b35, #f7b733);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: glow 4s ease-in-out infinite alternate;
        }

    @@keyframes glow {
        from {
            text-shadow: 0 0 10px rgba(255,107,53,0.4);
        }

        to {
            text-shadow: 0 0 25px rgba(255,193,7,0.9);
        }
    }

    .carousel-caption p {
        font-size: 1rem;
        color: #f1f1f1;
        margin-bottom: 10px;
    }

    .carousel-caption .btn {
        border-radius: 40px;
        padding: 8px 25px;
        font-size: 1rem;
        font-weight: 700;
        box-shadow: 0 0 15px rgba(255, 107, 53, 0.4);
        transition: all 0.3s ease;
    }

        .carousel-caption .btn:hover {
            transform: scale(1.1);
            box-shadow: 0 0 25px rgba(255, 193, 7, 0.7);
        }
</style>

<div class="container mt-5 text-white">
    <!-- Категории -->
    <div class="row mb-5">
        <div class="col-12">
            <h3 class="text-center mb-4 fw-bold text-white">ПАЗАРУВАЙ ПО КАТЕГОРИЯ</h3>
            <div class="d-flex flex-wrap gap-2 justify-content-center">
                <a href="@Url.Action("Index", new { category = "" })"
                   class="btn @(string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["category"]) ? "btn-warning text-dark fw-semibold" : "btn-outline-light")">
                    <i class="fas fa-th-large me-2"></i> Всички продукти
                </a>

                <a href="@Url.Action("Index", new { category = "Изграждане на мускулна маса" })"
                   class="btn @(ViewContext.HttpContext.Request.Query["category"] == "Изграждане на мускулна маса" ? "btn-warning text-dark fw-semibold" : "btn-outline-light")">
                    💪 Изграждане на мускулна маса
                </a>

                <a href="@Url.Action("Index", new { category = "Отслабване" })"
                   class="btn @(ViewContext.HttpContext.Request.Query["category"] == "Отслабване" ? "btn-warning text-dark fw-semibold" : "btn-outline-light")">
                    🔥 Отслабване
                </a>

                <a href="@Url.Action("Index", new { category = "Регенерация" })"
                   class="btn @(ViewContext.HttpContext.Request.Query["category"] == "Регенерация" ? "btn-warning text-dark fw-semibold" : "btn-outline-light")">
                    ♻️ Регенерация
                </a>

                <a href="@Url.Action("Index", new { category = "Висока производителност" })"
                   class="btn @(ViewContext.HttpContext.Request.Query["category"] == "Висока производителност" ? "btn-warning text-dark fw-semibold" : "btn-outline-light")">
                    ⚡ Висока производителност
                </a>

                <a href="@Url.Action("Index", new { category = "Имунитет" })"
                   class="btn @(ViewContext.HttpContext.Request.Query["category"] == "Имунитет" ? "btn-warning text-dark fw-semibold" : "btn-outline-light")">
                    💊 Имунитет
                </a>

                <a href="@Url.Action("Index", new { category = "Здравословна закуска" })"
                   class="btn @(ViewContext.HttpContext.Request.Query["category"] == "Здравословна закуска" ? "btn-warning text-dark fw-semibold" : "btn-outline-light")">
                    🍎 Здравословна закуска
                </a>

                <a href="@Url.Action("Index", new { category = "Облекло" })"
                   class="btn @(ViewContext.HttpContext.Request.Query["category"] == "Облекло" ? "btn-warning text-dark fw-semibold" : "btn-outline-light")">
                    👕 Облекло
                </a>
            </div>
        </div>
    </div>

    <!-- Бутон за админ -->
    @if (Context.Session.GetString("Role") == "Admin")
    {
        <div class="row mb-4">
            <div class="col-12 text-end">
                <a asp-action="Create" class="btn btn-success btn-lg fw-bold">
                    <i class="fas fa-plus-circle me-2"></i> Добави нов продукт
                </a>
            </div>
        </div>
    }

    <!-- Продукти -->
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                <div class="card product-card h-100 border-0 shadow-sm" style="background-color:#1b1b1b; color:white;">
                    <!-- Снимка -->
                    <div class="position-relative overflow-hidden">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name"
                             onerror="this.src='/images/products/default-product.jpg'"
                             style="height: 250px; object-fit: cover; transition: transform 0.3s ease;">

                        <span class="badge-premium position-absolute top-0 start-0 m-3 text-warning fw-bold">
                            <i class="fas fa-crown me-1"></i> Премиум
                        </span>

                        <!-- Наличност -->
                        @if (product.StockQuantity < 10)
                        {
                            <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-3">
                                <i class="fas fa-exclamation-triangle me-1"></i> Ограничени количества
                            </span>
                        }
                        else if (product.StockQuantity > 50)
                        {
                            <span class="badge bg-success position-absolute top-0 end-0 m-3">
                                <i class="fas fa-check me-1"></i> В наличност
                            </span>
                        }

                        <!-- Препоръки -->
                        <div class="position-absolute bottom-0 start-0 m-2">
                            @if (product.IsRecommendedForMassGain)
                            {
                                <span class="badge bg-info me-1 mb-1" title="Препоръчано за мускулна маса">
                                    <i class="fas fa-weight-hanging"></i> Масa
                                </span>
                            }
                            @if (product.IsRecommendedForWeightLoss)
                            {
                                <span class="badge bg-success me-1 mb-1" title="Препоръчано за отслабване">
                                    <i class="fas fa-fire"></i> Изгаряне
                                </span>
                            }
                            @if (product.IsRecommendedForMaintenance)
                            {
                                <span class="badge bg-primary mb-1" title="Поддържане на форма">
                                    <i class="fas fa-balance-scale"></i> Баланс
                                </span>
                            }
                        </div>
                    </div>

                    <!-- Детайли -->
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-white">@product.Name</h5>
                        <span class="badge bg-dark mb-2 align-self-start text-light">@product.Category</span>

                        <p class="card-text flex-grow-1 text-light">@product.Description</p>

                        <!-- Информация за наличност -->
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-box me-1"></i>
                                @if (product.StockQuantity > 0)
                                {
                                    <span class="text-success">@product.StockQuantity бр. в наличност</span>
                                }
                                else
                                {
                                    <span class="text-danger">Изчерпано количество</span>
                                }
                            </small>
                        </div>

                        <!-- Цена и бутони -->
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="fw-bold mb-0" style="color: #ffc107;">@product.Price.ToString("F2") лв.</h4>
                                <div class="text-warning">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                    <small class="text-muted">4.5</small>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <!-- Детайли -->
                                <a asp-action="Details" asp-route-id="@product.Id"
                                   class="btn btn-info text-white" title="Виж детайли">
                                    <i class="fas fa-eye"></i>
                                </a>

                                @if (Context.Session.GetString("Role") == "Admin")
                                {
                                    <a asp-action="Edit" asp-route-id="@product.Id"
                                       class="btn btn-warning flex-fill fw-bold" title="Редактирай продукта">
                                        <i class="fas fa-edit me-1"></i> Редактирай
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@product.Id"
                                       class="btn btn-danger text-white" title="Изтрий продукта">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                }
                                else
                                {
                                    @if (product.StockQuantity > 0)
                                    {
                                        <a class="btn btn-warning rounded-pill shadow-sm fw-semibold add-to-cart-link"
                                           asp-controller="Cart"
                                           asp-action="AddToCart"
                                           asp-route-id="@product.Id">
                                            Добави в количката
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary flex-fill" disabled>
                                            <i class="fas fa-times me-2"></i> ИЗЧЕРПАНО
                                        </button>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 text-white">
            <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
            <h3>Няма намерени продукти</h3>
            <p class="text-muted">Няма налични продукти в тази категория в момента.</p>
            <a href="@Url.Action("Index", new { category = "" })" class="btn btn-warning text-dark fw-bold">
                <i class="fas fa-th-large me-2"></i> Виж всички продукти
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("click", async (e) => {
            const link = e.target.closest(".add-to-cart-link");
            if (!link) return;

            e.preventDefault();
            const url = link.getAttribute("href");

            try {
                const response = await fetch(url, {
                    method: "GET",
                    credentials: "same-origin",
                    redirect: "follow"
                });

                if (response.status >= 200 && response.status < 400) {
                    showToast("✅ Продуктът е добавен в количката!");
                    bumpCartBadge();
                } else {
                    showToast("⚠️ Неуспешно добавяне на продукта.", true);
                }
            } catch {
                showToast("⚠️ Грешка от сървъра. Опитайте отново по-късно.", true);
            }
        });

        function showToast(message, isError = false) {
            const toast = document.createElement("div");
            toast.textContent = message;
            Object.assign(toast.style, {
                position: "fixed",
                bottom: "30px",
                right: "30px",
                background: isError ? "#dc3545" : "#28a745",
                color: "#fff",
                padding: "12px 20px",
                borderRadius: "8px",
                boxShadow: "0 2px 10px rgba(0,0,0,0.2)",
                zIndex: "9999",
                fontWeight: "600",
                transition: "opacity 0.3s ease"
            });
            document.body.appendChild(toast);
            setTimeout(() => {
                toast.style.opacity = "0";
                setTimeout(() => toast.remove(), 500);
            }, 2000);
        }

        function bumpCartBadge() {
            const badge = document.querySelector("#cartCountBadge");
            if (!badge) return;
            const n = parseInt(badge.textContent || "0", 10);
            badge.textContent = (n + 1).toString();
            badge.style.display = "inline-block";
        }
    </script>
}