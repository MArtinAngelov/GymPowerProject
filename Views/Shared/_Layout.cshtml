<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymPower</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-brand {
            font-weight: bold;
            color: #dc3545 !important;
        }

        .btn-primary {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-primary:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .card {
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-5px);
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-dumbbell"></i> GymPower
            </a>

            <div class="navbar-nav me-auto">
                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                <a class="nav-link" asp-controller="Products" asp-action="Index">Products</a>

                @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
                {
                    <a class="nav-link" asp-controller="Cart" asp-action="Index">
                        <i class="fas fa-shopping-cart"></i> Cart
                        <span id="cartCount" class="badge bg-danger">0</span>
                    </a>

                    @if (Context.Session.GetString("Role") == "Admin")
                    {
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a>
                    }
                }
            </div>

            <div class="navbar-nav">
                @if (string.IsNullOrEmpty(Context.Session.GetString("UserId")))
                {
                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                    <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                }
                else
                {
                    <span class="navbar-text me-3">
                        Hello, @Context.Session.GetString("Username")
                    </span>
                    <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                }
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Update cart count
        async function updateCartCount() {
            try {
                const response = await fetch('@Url.Action("GetCartCount", "Cart")');
                if (response.ok) {
                    const count = await response.text();
                    $('#cartCount').text(count);
                }
            } catch (error) {
                console.log('Error updating cart count');
            }
        }
        $(document).ready(updateCartCount);
    </script>
</body>
</html>