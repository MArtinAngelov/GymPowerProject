@using Microsoft.AspNetCore.Http
@{
    var username = Context.Session.GetString("Username");
    var role = Context.Session.GetString("Role");
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}
<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymPower</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #ff6b35;
            --secondary: #2ec4b6;
            --dark: #1a1a2e;
            --darker: #0d0d1a;
            --light: #f8f9fa;
            --gradient: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
            --gradient-dark: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        }

        * {
            font-family: 'Montserrat', sans-serif;
        }

        body {
            background: var(--darker);
            color: var(--light);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background: var(--gradient-dark) !important;
            border-bottom: 2px solid var(--primary);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.8rem;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .nav-link {
            color: var(--light) !important;
            font-weight: 600;
            margin: 0 0.5rem;
            border-radius: 25px;
            padding: 0.5rem 1rem !important;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                background: var(--primary);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(255, 107, 53, 0.3);
            }

        footer {
            background: var(--gradient-dark);
            border-top: 2px solid var(--primary);
            margin-top: auto;
        }

        .social-links a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background: var(--gradient);
            border-radius: 50%;
            color: white;
            margin: 0 0.5rem;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .social-links a:hover {
                transform: translateY(-3px) rotate(5deg);
                box-shadow: 0 5px 15px rgba(255, 107, 53, 0.4);
            }
    </style>
</head>
<body>
    <!-- ✅ Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand text-uppercase" asp-controller="Home" asp-action="Index">
                GymPower
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Начало</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Products" asp-action="Index">🛒 Продукти</a>
                    </li>

                    @if (role == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold" asp-controller="Admin" asp-action="Index">
                                ⚙️ Админ Панел
                            </a>
                        </li>
                    }
                </ul>

                <form class="d-flex me-3" asp-controller="Products" asp-action="Index" method="get">
                    <input class="form-control me-2" type="search" name="search" placeholder="🔍 Търси продукти..." />
                    <button class="btn btn-outline-warning" type="submit"><i class="fas fa-search"></i></button>
                </form>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cart" asp-action="Index">
                            <i class="fa fa-shopping-cart"></i> Количка
                        </a>
                    </li>

                    @if (!string.IsNullOrEmpty(username))
                    {
                        <li class="nav-item">
                            <span class="nav-link">👋 Здравей, @username!</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="MyOrders" asp-action="Index">🧾 Моите поръчки</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Profile">👤 Моят профил</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">🚪 Изход</a>
                        </li>
                    }
                    else if (currentController != "Account")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">🔑 Вход</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">🧾 Регистрация</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- ✅ Body -->
    <main class="flex-grow-1">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>

    <!-- ✅ Footer -->
    <footer class="mt-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h4 class="fw-bold"><i class="fas fa-dumbbell"></i> GYMPOWER</h4>
                    <p>Твоят източник на премиум добавки и аксесоари. Постигни целите си с качествени продукти.</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-tiktok"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold">Контакти</h5>
                    <p><i class="fas fa-phone me-2"></i> +359 888 123 456</p>
                    <p><i class="fas fa-envelope me-2"></i> support@gympower.bg</p>
                    <p><i class="fas fa-map-marker-alt me-2"></i> ул. „Фитнес“ 123, гр. София</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold">Бързи връзки</h5>
                    <p><a href="#" class="text-light text-decoration-none">За нас</a></p>
                    <p><a href="#" class="text-light text-decoration-none">Доставка</a></p>
                    <p><a href="#" class="text-light text-decoration-none">Връщане и замяна</a></p>
                    <p><a href="#" class="text-light text-decoration-none">Политика за поверителност</a></p>
                </div>
            </div>
            <hr class="my-4">
            <div class="text-center">
                <p>&copy; 2024 GymPower — Зареди своята сила. Всички права запазени.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
