                    }

    </style>

    
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // ✅ Default theme (GymPower)
            const defaultTheme = "default";
            const themes = ["default", "dark", "light"];
            const button = document.getElementById("themeToggle");

            // Detect logged user
            const isLoggedIn = "@(username != null)".toLowerCase() === "true";

            // If logged in → load saved theme
            // If not logged in → force GymPower theme
            const savedTheme = isLoggedIn ? localStorage.getItem("gympower-theme") || defaultTheme : defaultTheme;
            applyTheme(savedTheme);

            if (button) {
                button.addEventListener("click", () => {
                    const currentTheme = localStorage.getItem("gympower-theme") || defaultTheme;
                    const nextTheme = themes[(themes.indexOf(currentTheme) + 1) % themes.length];
                    localStorage.setItem("gympower-theme", nextTheme);
                    applyTheme(nextTheme);
                });
            }

            function applyTheme(theme) {
                document.body.classList.remove("default-theme", "dark-theme", "light-theme");
                document.body.classList.add(theme + "-theme");

                if (button) {
                    if (theme === "dark") button.innerHTML = "☀️ Светла тема";
                    else if (theme === "light") button.innerHTML = "⚡ GymPower тема";
                    else button.innerHTML = "🌙 Тъмна тема";
                }
            }
        });
    </script>

</body>
</html>
